@model HomeViewModel
@{
    ViewData["Title"] = "Home";
}
<h1>Welcome to Climbing Shoebox</h1>
<br />
<h6 class="text-center">Search our collection or browse some of our shoes below</h6>
<form asp-controller="Shoe" asp-action="ListSearchResults" asp-route-query="query" method="post" id="homeSearch">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="query" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>
</form>
<br />
<partial name="_Carousel" />

<br />
<br />
<hr />
<br />


<h2>Check out this week's featured shoe:</h2>

<br />
<div>
    <partial name="_SingleShoeFeature" model="@Model.FeaturedShoe" />
</div>
